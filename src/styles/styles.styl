.order
    .form
        border-radius: 10px;
        background-color #05b4e4
        width 300px;
        height auto;
        padding 16px
        .form__title
            color  #ffffff
            font-size 2em
            padding-bottom 20px
        .form__name, .form__telephone
            display block
            width 100%
            height 57px
            background #e9f8f7
            color #000000
            padding-left 10px
            outline none
            border 2px solid #ffffff
            border-radius 3px
            font-family Lato-light
            margin-bottom 20px
            &::-webkit-input-placeholder{color: #000000;}
            &:-moz-placeholder {color: #000000}
            &::-moz-placeholder {color: #000000;}
            &:-ms-input-placeholder {color: #000000;}
            &:focus::-webkit-input-placeholder {color: transparent;}
            &:focus::-moz-placeholder {color: transparent}
            &:focus:-moz-placeholder {color: transparent}
            &:focus:-ms-input-placeholder {color: transparent}
            &:focus
                border 4px solid rgba(27, 145, 179, 50)
        .form__name
            float right        
        .form__address
            display block
            width 100%
            height 57px
            background #e9f8f7
            color #000000
            padding-left 10px
            outline none
            border 2px solid #ffffff
            border-radius 3px
            font-family Lato-light
            margin-bottom 20px
            &::-webkit-input-placeholder{color: #000000;}
            &:-moz-placeholder {color: #000000;}
            &::-moz-placeholder {color: #000000;}
            &:-ms-input-placeholder {color: #000000;}
            &:focus::-webkit-input-placeholder {color: transparent;}
            &:focus::-moz-placeholder {color: transparent}
            &:focus:-moz-placeholder {color: transparent}
            &:focus:-ms-input-placeholder {color: transparent}
            &:focus
                border 4px solid rgba(27, 145, 179, 50)
        .form-selected-bottel
            width 100%
            height 57px
            float left
            margin-bottom 20px
            & select
                width 100%
                height 57px
                background #e9f8f7
                color #000000
                padding-left 10px
                outline none
                border 2px solid #ffffff
                border-radius 3px
                font-family Lato-light
        .form-selected-type
            width 100%
            height 57px
            float right
            margin-bottom 20px
            & select 
                width 100%
                height 57px
                background #e9f8f7
                color #000000
                padding-left 10px
                outline none
                border 2px solid #ffffff
 
                border-radius 3px
                font-family Lato-light      
        .btn-send
            display block
            border-radius 3px
            background-color #12c609
            width 208px
            height 57px  
            margin 0 auto
            outline none
            border none
            text-transform uppercase
            margin 7px auto 15px
            &:hover
                background-color #1c308a
                border 2px solid #1c308a
                color #ffffff
                cursor pointer
                transition 1s  
