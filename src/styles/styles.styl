
@import './fonts'
@import './reset.css'
@import './font-image.css'


* 
    margin 0
    padding 0
    box-sizing border-box

body 
    font-size 16px
    font-family Lato-Bold
.clearfix:before,.clearfix:after 
    content " "
    display table
    width 0
    height 0
    visibility hidden
.clearfix:after 
    clear both
input {
    -webkit-appearance: none;
}

.container
    width 310px
    margin 0 auto
    padding 0 5px
