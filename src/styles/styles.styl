#map
    width 100%
    height 400px
    background-color grey   
.header
    width 100%
    height 64px
    padding-top 15px
    .header-mob__hide
        display none
    .header__mobile 
        display block
        width 45%
        height 100%
        overflow-y auto
        background-position right top
        position fixed
        right 100%
        top 0
        z-index 9999
        -webkit-transition right 0.7s ease-out 0.01s
        -moz-transition right 0.7s ease-out 0.01s
        transition right 0.7s ease-out 0.01s
        background #12c609
        -webkit-box-shadow 0 0 10px 5px rgba(0,0,0,0.4) inset
        -moz-box-shadow 0 0 10px 5px rgba(0,0,0,0.4) inset
        box-shadow 0 0 10px 5px rgba(0,0,0,0.4) inset
    .is-mobile-header
        position fixed
        left 0
        top 0
        .header__mob-wrapper 
            width 100%
            height 100%
            position relative
        .header__mob-content
            .header__mob-menu        
                .header__menu
                    float none
                    margin-top 20px
                .header__link
                    float none
                    font-size 2em
                    font-size 0.813em
                    font-weight 700
                    line-height 3.202
                    text-align center
                    width 238px
                    height 69px
                    padding-top 14px
                    font-family Lato-Bold
                    & a 
                        text-decoration none
                        text-transform uppercase
                        color #ffffff
                    &:hover
                        background-color #11ae09
                    &:active
                        background-color #11ae09
    .header__content
        .header__mob-icon
            float left
            display block
            width 22px
            height 18px
            cursor pointer
            margin-top 6px
            margin-left 15px
            margin-bottom 3px

            .header__mob-line
                width 100%
                height 4px
                background #12c609
                margin-bottom 3px
        .header__part
            .header__block
                .header__logo-wrapper
                    width 20px
                    height 26px
                    float left
                    margin-left 25px
                    img 
                        width 100%
                        display block
                .header__logo-text
                    display block
                    font-family Lato-Black
                    color #3e5960
                    font-size 1.165em  
                    width 55%
                    float left
                    margin-top 6px
                    margin-left 12px
                .telephone-icon
                    float right
                    margin-top 7px
                    margin-right 10px
                    text-decoration none
